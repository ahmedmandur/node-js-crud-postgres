{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Book Store API",
    "description": "Book Store API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Book Store",
      "description": "API"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/v1/books": {
      "get": {
        "description": "Returns all BOOKS from the system that the user has access to",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "A list of books.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/books"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "book": {
      "required": ["title", "publisher", "author"],
      "properties": {
        "bookId": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },

        "description": {
          "type": "string"
        },
        "publisher": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "pages": {
          "type": "integer"
        }
      }
    },
    "books": {
      "$ref": "#/definitions/book"
    }
  }
}
